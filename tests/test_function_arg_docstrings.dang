# Test that function argument doc strings are preserved in the type system

pub greet(
  """
  The name to greet
  """
  name: String!,
  """
  Optional greeting prefix
  """
  prefix: String = "Hello",
): String {
  prefix + " " + name
}

# Verify the function works correctly
let result = greet("Alice")
assert { result == "Hello Alice" }

let customResult = greet("Bob", "Hi")
assert { customResult == "Hi Bob" }

