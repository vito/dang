# Test conditional expressions (if/else)

# Basic if/else
pub result1 = if true { "yes" } else { "no" }
pub result2 = if false { "yes" } else { "no" }

assert { result1 == "yes" }
assert { result2 == "no" }

# If without else (should return null when condition is false)
pub result3 = if true { "value" }
pub result4 = if false { "value" }

assert { result3 == "value" }
assert { result4 == null }

# Nested conditionals
pub nested = if true {
  if false { "inner_false" } else { "inner_true" }
} else {
  "outer_false"
}

assert { nested == "inner_true" }

# Conditionals with variables
pub x = 10
pub y = 20

pub max = if x > y {
  x
} else if y > x {
  y
} else {
  x
}

assert { max == y }

print("Conditional tests passed!")