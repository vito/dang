pub simpleWhile: String! {
  let counter = 0
  let result = ""
  
  while counter < 3 {
    result = result + "loop"
    counter = counter + 1
  }
  
  result
}

pub whileAccumulate: Int! {
  let sum = 0
  let i = 1
  
  while i <= 3 {
    sum = sum + i
    i = i + 1
  }
  
  sum
}

assert { simpleWhile == "looplooploop" }
assert { whileAccumulate == 6 }