# Test reassignment functionality

pub x = 42
pub y = "hello"
pub flag = true

# Test basic reassignment
x = 100
assert { x == 100 }

# Test string reassignment
y = "world"
assert { y == "world" }

# Test boolean reassignment
flag = false
assert { flag == false }

# Test reassignment in blocks
{
  x = 200
  assert { x == 200 }
}

pvt fs = {{ a: {{ b: {{ c: 42 }} }} }}
fs.a.b.c = 100
assert { fs.a.b.c == 100 }

fs.a.b.c += 50
assert { fs.a.b.c == 150 }

print("Reassignment tests passed!")
