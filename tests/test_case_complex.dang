# Test case expressions with complex values

# Case on expression result
pub expr_result = case (1 + 1) {
  1 => "one"
  2 => "two"
  3 => "three"
}

assert { expr_result == "two" }

# Case on variable
pub x = 5
pub var_result = case (x) {
  3 => "three"
  5 => "five"
  7 => "seven"
}

assert { var_result == "five" }

# Case in a function
pub caseInClassify(x: Int!): String! {
  case (x) {
    0 => "zero"
    1 => "one"
    2 => "two"
  }
}

assert { caseInClassify(0) == "zero" }
assert { caseInClassify(1) == "one" }
assert { caseInClassify(2) == "two" }

# Nested case
pub nested = case (1) {
  1 => case ("a") {
    "a" => "nested case works"
    "b" => "not this"
  }

  2 => "outer"
}

assert { nested == "nested case works" }

print("Complex case expression tests passed!")
