{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Dang",
  "scopeName": "source.dang",
  "patterns": [
    { "include": "#comment" },
    { "include": "#string" },
    { "include": "#triple-quote-string" },
    { "include": "#number" },
    { "include": "#boolean" },
    { "include": "#null" },
    { "include": "#directive" },
    { "include": "#keyword-control" },
    { "include": "#keyword" },
    { "include": "#self" },
    { "include": "#type-name" },
    { "include": "#builtin-function" },
    { "include": "#operator" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comment": {
      "match": "#.*$",
      "name": "comment.line.number-sign.dang"
    },
    "triple-quote-string": {
      "begin": "\"\"\"",
      "end": "\"\"\"",
      "name": "string.quoted.triple.dang"
    },
    "string": {
      "begin": "\"",
      "end": "\"",
      "name": "string.quoted.double.dang",
      "patterns": [
        {
          "match": "\\\\[\"\\\\nrt]",
          "name": "constant.character.escape.dang"
        },
        {
          "begin": "\\{\\{",
          "end": "\\}\\}",
          "name": "meta.interpolation.dang",
          "patterns": [
            { "include": "$self" }
          ]
        }
      ]
    },
    "number": {
      "match": "\\b[0-9]+\\b",
      "name": "constant.numeric.dang"
    },
    "boolean": {
      "match": "\\b(true|false)\\b",
      "name": "constant.language.boolean.dang"
    },
    "null": {
      "match": "\\b(null)\\b",
      "name": "constant.language.null.dang"
    },
    "self": {
      "match": "\\b(self)\\b",
      "name": "variable.language.self.dang"
    },
    "directive": {
      "match": "@[a-zA-Z_][a-zA-Z0-9_]*",
      "name": "entity.name.function.macro.dang"
    },
    "keyword-control": {
      "match": "\\b(type|interface|implements|enum|scalar|if|else|for|break|continue|in|case|assert|directive|on|import|new|and|or)\\b",
      "name": "keyword.control.dang"
    },
    "keyword": {
      "match": "\\b(let|pub)\\b",
      "name": "keyword.other.dang"
    },
    "type-name": {
      "match": "\\b[A-Z][a-zA-Z0-9_]*\\b",
      "name": "entity.name.type.dang"
    },
    "builtin-function": {
      "match": "\\b(print|toJSON)\\b",
      "name": "support.function.builtin.dang"
    },
    "operator": {
      "match": "(==|!=|<=|>=|<|>|\\+\\=|\\?\\?|=>|=|!)",
      "name": "keyword.operator.dang"
    },
    "punctuation": {
      "patterns": [
        {
          "match": "[{}()\\[\\]]",
          "name": "punctuation.bracket.dang"
        },
        {
          "match": "[,.]",
          "name": "punctuation.delimiter.dang"
        },
        {
          "match": "[&|]",
          "name": "punctuation.special.dang"
        }
      ]
    }
  }
}
