{
  "name": "dang",
  "displayName": "Dang",
  "description": "Language support for Dang",
  "version": "0.1.0",
  "publisher": "danglang",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/vito/dang"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:dang"
  ],
  "contributes": {
    "languages": [
      {
        "id": "dang",
        "aliases": [
          "Dang",
          "dang"
        ],
        "extensions": [
          ".dang"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icon.png",
          "dark": "./icon.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "dang",
        "scopeName": "source.dang",
        "path": "./syntaxes/dang.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "Dang",
      "properties": {
        "dang.lsp.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable the Dang language server."
        },
        "dang.lsp.path": {
          "type": "string",
          "default": "dang",
          "description": "Path to the dang binary."
        },
        "dang.lsp.logFile": {
          "type": "string",
          "default": "",
          "description": "Path to LSP log file (empty for no logging)."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^18.19.130",
    "@types/vscode": "^1.75.0",
    "@vscode/vsce": "^2.22.0",
    "typescript": "^5.3.0"
  }
}
